# EditorConfig helps maintain consistent coding styles
root = true

[*.md]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.yml]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,txt}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
